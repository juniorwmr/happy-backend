{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "CommonJS",                     
    "allowJs": true,
    "esModuleInterop": true,                 
    "skipLibCheck": true,  
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,             
    "forceConsistentCasingInFileNames": true,  
    "strictPropertyInitialization": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src", "./ormconfig.ts"]
}
